{% extends '/back/base.html.twig' %}

{%block head %}
    <title>MyFirstBlog | Accueil</title>
{% endblock %}
{% block titleJumboTron %}
    Tableau de Bord
    {% endblock %}
{%block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <h5 class="card-header bg-dark text-light">Les 5 derniers articles</h5>
                    <div class="card-body">
                        <table class="table table-sm table-hover">
                            <thead class="thead-light">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Titres</th>
                                <th scope="col">Chapo</th>
                                <th scope="col">Création</th>
                                <th scope="col">Dernière Modification</th>
                                <th scope="col">Statut</th>
                                <th scope="col">Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for post in posts %}
                                <tr>
                                    <th scope="row">{{ post.idPost }}</th>
                                    <td>{{ post.title }}</td>
                                    <td>{{ post.shortText[:40] }}...</td>
                                    <td>{{ post.created }}</td>
                                    <td>{{ post.modified }}</td>
                                    {% if post.idStatutPost == 1 %}
                                        <td><button type="button" class="btn btn-sm btn-info">En Ligne</button></td>
                                    {% else %}
                                        <td><button type="button" class="btn btn-sm btn-warning">Brouillon</button></td>
                                    {% endif %}
                                    <td scope="col"><a href="{{ LinkBuilder.getLink('PostAdminUpdate', {article_id: post.idPost}) }}" class="btn btn-sm btn-outline-dark">Modifier</a></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <hr/>
                        <a href="{{ LinkBuilder.getLink('PostAdminAll') }}" class="btn btn-outline-info">Voir tous les Articles </a>
                        <a href="{{ LinkBuilder.getLink('PostAdminAdd') }}" class="btn btn-outline-info">Ajouter un article </a>
                    </div>
                </div>
            </div>
        </div>
        <div style="padding-top:20px;"></div>
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <h5 class="card-header bg-dark text-light">Commentaires non-validés</h5>
                    <div class="card-body">
                        {% if noValidateComments %}
                        <table class="table table-sm table-hover">
                            <thead class="thead-light">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Utilisateur</th>
                                <th scope="col">Création</th>
                                <th scope="col">Contenu</th>
                                <th scope="col">Statut</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for comment in noValidateComments %}
                                <tr>
                                    <th scope="row">{{ comment.idComment }}</th>
                                    <td>{{ comment.firstName }} {{ comment.lastName }}</td>
                                    <td>{{ comment.created }}</td>
                                    <td>{{ comment.content[:40] }}...</td>
                                    <td scope="col"><a href="{{ LinkBuilder.getLink('CommentAdminValidate', {id_comment: comment.idComment}) }}" class="btn btn-sm btn-outline-dark">Modifier</a></td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                            {% else %}
                        <h5 class="card-title">Aucun commentaire à valider</h5>
                        <a href="#" class="btn btn-outline-warning">Voir tous les commentaires</a>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <h5 class="card-header bg-dark text-light">Utilisateurs</h5>
                    <div class="card-body">
                        <h5 class="card-title">Special title treatment</h5>
                        <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                        <a href="#" class="btn btn-outline-dark">Go somewhere</a>
                    </div>
                </div>
            </div>
        </div>
        <div style="padding-bottom:50px;"></div>
    </div>
{% endblock %}