{% extends '/back/base.html.twig' %}
{%block head %}
    <title>MyFirstBlog | Accueil</title>
{% endblock %}
{% block titleJumboTron %}
    Tous les articles
{% endblock %}
{%block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <h5 class="card-header bg-dark text-light">Articles</h5>
                    <div class="card-body">
                        <table class="table table-sm table-hover">
                            <thead class="thead-light">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Titres</th>
                                <th scope="col">Chapo</th>
                                <th scope="col">Création</th>
                                <th scope="col">Dernière Modification</th>
                                <th scope="col">Statut</th>
                                <th scope="col">Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for post in posts %}
                                <tr>
                                    <th scope="row">{{ post.idPost }}</th>
                                    <td>{{ post.title }}</td>
                                    <td>{{ post.shortText[:40] }}...</td>
                                    <td>{{ post.created }}</td>
                                    <td>{{ post.modified }}</td>
                                    {% if post.idStatutPost == 1 %}
                                        <td><button type="button" class="btn btn-sm btn-info">En Ligne</button></td>
                                    {% else %}
                                        <td><button type="button" class="btn btn-sm btn-warning">Brouillon</button></td>
                                    {% endif %}
                                    <td scope="col"><a href="{{ LinkBuilder.getLink('PostAdminUpdate', {article_id: post.idPost}) }}" class="btn btn-sm btn-outline-dark">Modifier</a></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <hr/>
                        <a href="{{ LinkBuilder.getLink('PostAdminAdd') }}" class="btn btn-outline-info">Ajouter un article </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}