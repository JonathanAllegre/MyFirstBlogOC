{% extends '/front/base.html.twig' %}

{%block head %}
    <title>MyFirstBlog | Tous les articles</title>
{% endblock %}

{%block content %}
    <div class="container">
        <div class="row">
            <div class="offset-2 col-8 text-center">
                <h2 class="h2Accueil">Blog</h2>
                <hr class="hrAccueil">
            </div>
        </div>
        <div class="row">
            {% for post in posts %}
                {% if post.idStatutPost == 1 %}
                    <div class="col-lg-12 text-center spacerCardBlog">
                        {% if post.imgName %}
                            <img class="" src="{{ publicFolder }}/img/Blog/{{ post.imgName }}" alt="Generic placeholder image" width="100%">
                            <hr>
                            {% endif %}
                        <h2>{{ post.title }}</h2>
                        <p class="about"><em>{{ post.shortText }}</em></p>
                        <p class="text-right">Le {{ post.modified|date('d-m-Y à H:i') }}</p>
                        <p class="text-right"><a class="btn btn-outline-secondary" href="{{ LinkBuilder.getLink("PostRead", {id_article: post.idPost}) }}" role="button">Voir le détail »</a></p>
                        <hr>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>

{% endblock %}