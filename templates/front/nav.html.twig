<!-- REGISTER MODAL -->
<div class="modal fade" id="registerModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">S'enregistrer</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <form action="{{ LinkBuilder.getLink("NewUserRegister") }}" method="POST">
                        <div class="row">
                            <div class="col-md-12">
                                <h5>Nom / Prénom</h5>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="text" id="last_name" class="form-control" name="last_name" required placeholder="Votre Nom" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="text" id="first_name" class="form-control" name="first_name" required placeholder="Votre Prénom" required>
                                </div>
                            </div>
                        </div>
                        <hr/>
                        <div class="row">
                            <div class="col-md-12">
                                <h5>EMail / Mot de Passe</h5>
                            </div>
                            <div class="col-12">
                                <div class="input-group mb-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text"><i class="fas fa-envelope"></i></div>
                                    </div>
                                    <input type="email" class="form-control" name="email" id="inlineFormInputGroup" placeholder="Votre adresse email" required>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="input-group mb-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text"><i class="fas fa-key"></i></div>
                                    </div>
                                    <input type="password" name="password" class="form-control" id="inlineFormInputGroup" placeholder="mot de passe" required>
                                </div>
                            </div>
                        </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-outline-secondary sendContactButton">Créer un compte</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- LOGIN MODAL -->
