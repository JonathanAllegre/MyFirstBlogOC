{% extends '/front/base.html.twig' %}

{%block head %}
    <title>MyFirstBlog | Mon Compte</title>
{% endblock %}

{%block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="offset-md-2 col-md-8">
                <h2 class="h2Accueil">Mon Compte</h2>
                <hr class="titlePagehr">
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="offset-md-3 col-md-2">
                <img src="https://openclipart.org/download/211821/matt-icons_preferences-desktop-personal.svg" class="rounded-circle imgUser">
            </div>
            <div class="col-md-3">
                <p>
                    <h3>{{ user.firstName }} {{ user.lastName }}</h3>
                    <h5>{{ user.mailAdress }}</h5>
                </p>
                <p>
                    <h5>Inscrit le: {{ user.registrationDate |date('d-m-Y à H:i:s') }}</h5>
                    <h5>Rôle: {{ user.roleTitle }}</h5>
                </p>
                <div class="offset-md-3 col-md-4">
                    <button type="button" class="btn btn-danger">Supprimer Mon Compte</button>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid footerSpacer"></div>

{% endblock %}